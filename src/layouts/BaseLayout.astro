---
import "../styles/global.css";
const snipcartApiKey = import.meta.env.PUBLIC_SNIPCART_API_KEY;
const businessName = import.meta.env.PUBLIC_BUSINESS_NAME;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{businessName}</title>
    <style>
      html.loading {
        visibility: hidden;
        opacity: 0;
      }
    </style>
    <script>
      // Immediately hide the content
      document.documentElement.classList.add("loading");
    </script>
  </head>
  <body class="font-sans bg-gray-50">
    <slot />
  </body>
  <script is:inline define:vars={{ snipcartApiKey }}>
    window.SnipcartSettings = {
      publicApiKey: snipcartApiKey,
      loadStrategy: "on-user-interaction",
      currency: "nzd",
      modalStyle: "side",
      templatesUrl: "/snipcart-templates",
