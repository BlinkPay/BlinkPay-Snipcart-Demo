    // Function to remove loading class and show content
    function showContent() {
      document.documentElement.classList.remove("loading");
      document.documentElement.style.visibility = "visible";
      document.documentElement.style.opacity = "1";
      document.documentElement.style.transition = "opacity 0.3s ease-in-out";
    }

    // Wait for everything to load
    if (document.readyState === "complete") {
      showContent();
    } else {
      window.addEventListener("load", showContent);
    }

    // Custom configuration to filter payment methods
    document.addEventListener("snipcart.ready", function () {
      Snipcart.api.session.setLanguage("en");

      const style = document.createElement("style");
      // Remove credit cards and replace with BlinkPay
      style.textContent = `
      .snipcart-payment__form-container {
        display: none !important;
      }
      .snipcart-form__separator {
        display: none !important;
      }
      .snipcart-payment-methods-list-item button[title="Checkout with Credit card"] {
        display: none !important;
      }
    `;

      // Append the style element to the head of the document
      document.head.appendChild(style);
    });
  </script>
  <div hidden id="snipcart" data-config-modal-style="side"></div>
</html>
